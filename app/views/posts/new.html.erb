<h2 class="mb-4">新規投稿</h2>

<div class="container">
  <!-- エラーメッセージ -->
  <% if @post.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= pluralize(@post.errors.count, "error") %> prevented this post from being saved:</h4>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- 投稿フォーム -->
  <%= form_for @post, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :title, "タイトル", class: "form-label" %>
      <%= f.text_field :title, class: "form-control", autofocus: true %>
    </div>

    <div class="mb-3">
      <%= f.label :content, "内容", class: "form-label" %>
      <%= f.text_area :content, class: "form-control", rows: 4 %>
    </div>

    <div class="mb-3">
      <%= f.label :image, "画像", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="mt-3">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
