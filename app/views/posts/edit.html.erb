<h1 class="mb-4">投稿編集</h1>

<% if @post.errors.any? %>
  <div class="alert alert-danger">
    <h4 class="alert-heading">エラーが発生しました</h4>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary text-white">投稿を編集</div>
        <div class="card-body">
          <%= form_with(model: @post, local: true) do |form| %>
            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :content, class: "form-label" %>
              <%= form.text_area :content, class: "form-control", rows: 5 %>
            </div>

            <div class="d-flex justify-content-between">
              <%= form.submit "更新", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= form_with(model: @post, method: :delete, data: { confirm: '本当に削除しますか？' }) do |delete_form| %>
            <div class="d-flex justify-content-between mt-3">
              <%= delete_form.submit "削除", class: "btn btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
