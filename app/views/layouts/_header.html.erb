<header class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">スポーツコミュニティ</a>

    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ml-auto">  <!-- ml-autoで右寄せ -->
        <!-- 投稿一覧ボタン -->
        <li class="nav-item">
          <%= link_to "投稿一覧", posts_path, class: "nav-link" %>
        </li>

        <!-- 新規投稿ボタン（ログイン時のみ表示） -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "新規投稿", new_post_path, class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <span class="nav-link text-muted">ログインしてください</span>
          </li>
        <% end %>

        <!-- 新規登録ボタン（ログインしていない場合のみ表示） -->
        <% unless user_signed_in? %>
          <li class="nav-item">
            <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>

        <!-- アバウトページボタン -->
        <li class="nav-item">
          <%= link_to "アバウト", about_path, class: "nav-link" %>
        </li>

        <!-- マイページボタン（ログイン時のみ表示） -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "マイページ", mypage_path(id: current_user.id), class: "nav-link" %>
          </li>
        <% end %>

        <!-- ログイン／ログアウトボタン -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
