<div class="container mt-5">
  <!-- ヘッダー -->
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="mb-4"><%= current_user.name %>さんのマイページ</h1>
    </div>
  </div>

  <!-- ユーザー情報 -->
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">プロフィール情報</h5>
          <p class="card-text"><strong>メールアドレス:</strong> <%= current_user.email %></p>

          <div class="d-flex justify-content-between">
            <%= link_to 'プロフィールを編集', edit_user_path(current_user), class: 'btn btn-warning' %>
            <%= link_to '退会する', user_path(current_user), method: :delete, data: { confirm: '本当に退会しますか？' }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
